<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/head.ejs', {page: 'Recipe Blog' }) %>

    <%- include ('./partials/nav.ejs') %>

        <body>
            <div>

                <h1>The Open Source Kitchen</h1>
                <h3>Welcome! View the latest recipes:</h3>
            </div>
            <main class="container is-max-widescreen">
                <div class="columns">
                    <% for(let idx=0; idx < recipes.length; idx++){ %>

                        <div class="card-content">
                            <div class="content">
                                <div>
                                    <img class="home-images" src="<%= recipes[idx].image %>" />
                                </div>

                                <a href="/recipeblog/<%= recipes[idx].title %>">
                                    <div class=recipe-title>
                                        <h2>
                                            <%= recipes[idx].title %>
                                        </h2>
                                    </div>
                                </a>
                                <div class="recipe-description">
                                    <%= recipes[idx].description %>
                                </div>
                            </div>
                        </div>
                </div>
                <% } %>
                    </div>


            </main>
        </body>

        </body>

</html>